<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">Title</Data></Cell>
        <Cell><Data ss:Type="String">Company</Data></Cell>
        <Cell><Data ss:Type="String">Salary</Data></Cell>
        <Cell><Data ss:Type="String">Country</Data></Cell>
        <Cell><Data ss:Type="String">Check</Data></Cell>
      </Row>
    <% @posts.each do |post| %>
      <Row>
        <Cell><Data ss:Type="String"><%= post.title %></Data></Cell>
        <Cell><Data ss:Type="String"><%= post.company %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= post.salary %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= post.location_id %></Data></Cell>
        <Cell><Data ss:Type="String"><%= post.check %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>