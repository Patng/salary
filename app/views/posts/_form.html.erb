<div class="text-white">
<%= simple_form_for(@post, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :company %>
  <%= f.input :salary %>
  <%= f.association :location, label_method: :name, value_method: :id %>

    <%= f.button :submit, "Submit", class: "btn" %>
<% end %>
</div>