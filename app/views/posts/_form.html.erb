<%= simple_form_for(@post, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :company %>
  <%= f.input :salary %>
  <%= f.input :country, priority: [ "Hong Kong" ] %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
